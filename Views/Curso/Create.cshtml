@{
    ViewData["Title"] = "Crear Curso";
    Layout = "_Simple";
}

@model Curso

<h1>@ViewData["Tile"]</h1>

<div class="col-md-8 offset-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="POST">
        <div class="col-4">
            <label asp-for="Nombre" class="form-control"></label>
            <input asp-for="Nombre" class="form-control">
        </div>

        <div class="col-4">
            <label asp-for="Direccion" class="form-control"></label>
            <input asp-for="Direccion" class="form-control">
        </div>

        <div class="col-4">
            <label asp-for="Jornada" class="form-control"></label>
            @* <input asp-for="Jornada"> *@

            @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione el Turno",
            new {@class="form-control"}
            )
        </div>

        <div class="col-4">
            <input class="form-control" type="submit">
        </div>

    </form>
</div>